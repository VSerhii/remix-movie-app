{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["es2020", "DOM", "WebWorker", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["node", "vite/client"],
    "paths": {
      "~/*": ["./app/*"]
    },
    "baseUrl": "."
  },
  "files": ["./.eslintrc.js"],
  "include": ["app"]
}
